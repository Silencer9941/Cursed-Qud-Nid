<objects>
	<!-- makes all Animals and NPCs have Adrenal Control mutation-->
	<object Name="Animal" Load="Merge">
		<mutation Name="AdrenalControl2" Level="5" />
	</object>

	<object Name="NPC" Load="Merge">
		<mutation Name="AdrenalControl2" Level="7" />
	</object>
	<!--gives Fungi a modified body that includes legs instead of a stalk so they can move, modified Factions element makes them hostile on sight rather than neutral-->
	<object Name="MutatedFungus" Load="Merge">
		<part Name="Brain" Hostile="true" Mobile="true" Wanders="true" Factions="Fungi-600" />
		<part Name="Body" Anatomy="FungusN" />
		<removepart Name="FungusProperties" />
	</object>
	<!--changed puffer fungi enemies to have Temporal Fugue, 2 melee weapons and some throwables to harass the player, slower speed and decreased HP to help balace the changes-->
	<object Name="FungusPuffer" Inherits="MutatedFungus">
		<part Name="Render" Tile="Creatures/sw_mushroom.bmp" RenderIfDark="true" DisplayName="{{Y|brooding puff}}" RenderString="231" ColorString="&amp;C" DetailColor="M" />
		<part Name="Brain" Hostile="true" Mobile="true" Wanders="true" Factions="Fungi-600" />
		<part Name="Corpse" CorpseChance="25" CorpseBlueprint="Humanoid Corpse" />
		<inventoryobject Blueprint="Infected Knob" Number="2" />
		<inventoryobject Blueprint="Moldy Knob" Number="6" />
		<mutation Name="TemporalFugue" Level="1" />
		<mutation Name="Teleportation" Level="1" />
		<part Name="Role" Value="Skirmisher" />
		<stat Name="Hitpoints" Value="100" />
		<stat Name="Level" Value="23" />
		<stat Name="Strength" sValue="28" />
		<stat Name="Speed" Value="85" />
		<skill Name="Tactics_Throwing" />
		<tag Name="GasDamageAsIfInanimate" />
		<tag Name="DynamicObjectsTable:Fungal_Creatures" />
		<tag Name="ExcludeFromVillageZero" />
		<tag Name="AggregateWith" Value="FungusPuffer" />
		<tag Name="BaseObject" Value="*noinherit" />
	</object>
	
